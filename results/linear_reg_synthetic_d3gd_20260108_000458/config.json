{
    "experiment_name": "linear_reg_synthetic",
    "seed": 42,
    "device": "cpu",
    "environment": {
        "num_nodes": 16,
        "graph_type": "rgg",
        "connectivity_radius": 0.4
    },
    "data": {
        "dataset": "synthetic_linear",
        "input_dim": 10,
        "num_samples_per_node": 1000,
        "noise_level": 0.1,
        "heterogeneity": {
            "type": "manual_clusters",
            "num_clusters": 2
        }
    },
    "training": {
        "model": "linear",
        "loss": "mse",
        "optimizer": "sgd",
        "global_lr": 0.1,
        "batch_size": 32,
        "max_iterations": 1000,
        "eval_interval": 1
    },
    "algorithm": {
        "weight_init": "metropolis_hastings",
        "d3gd": {
            "delta": 0.1,
            "topo_lr": 0.01,
            "projection": "simplex"
        },
        "stl_fw": {
            "lambda_reg": 0.1,
            "sparsity_budget": 10
        },
        "ac_gt": {
            "pruning_threshold": 0.5,
            "cycle_length": 10,
            "softmax_beta": 1.0
        }
    }
}